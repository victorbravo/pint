<!DOCTYPE html>
<html>
	<head>
	  <title>Pint</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
		<%= render 'layouts/header' %>
	<body>
	
		<div class="container">
			<%flash.each do |name, msg| %>
				<%= content_tag(:div, msg, class: "alert alert-#{name}") %>
			<% end %>	
			<%= yield %>
			<%= render 'layouts/footer' %>
		</div>

	</body>
</html>
